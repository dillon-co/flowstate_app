<!-- <ul class="small-block-grid-3"> -->

  <% blog = Blog.last %>
    <% if blog != nil %>
    <article>
      <h1><%= blog.title %></h1>
      <span>
        <% if !blog.media.url.include? "missing" %>
          <%= image_tag blog.media.url(:medium) %>
        <% end %>
    </span>
      <h6>Written By: <%= blog.user.name %></h6>

      <div class="row">
      <div class="large-10 columns">
        <div class="blog_summary">
          <p><%= blog.body.html_safe %></p>
      </div>
    </div>
  </div><br/>
      <%= link_to 'Read This', url_for(blog), class: "button radius" %>
</article>
    <% end %>
